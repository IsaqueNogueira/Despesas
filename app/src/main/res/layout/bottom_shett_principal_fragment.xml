<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/bottom_sheet_principal_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Netflix" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/baseline_edit"
        app:layout_constraintEnd_toStartOf="@id/bottom_sheet_principal_delete"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/baseline_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_title" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/coinmoeda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon1"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon1"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon1"
        tools:text="R$ 0,05" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon2"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/calendaricon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon1" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon_nao_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/alertnaopago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon2" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/checkpago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_paidout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon_nao_pago"
        tools:text="@string/paidoutinfo" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_maturity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon2"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon2"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon2"
        tools:text="15/04/2023" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheett_btn_pago"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_save"
        android:text="@string/paidoutmarcar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheett_btn_nao_pago"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_save"
        android:text="@string/paidoutmarcardesmarcar"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_delete_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteinfo"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet_principal_btn_delete"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheet_principal_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_delete"
        android:text="@string/confirmar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>