<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/bottom_sheet_principal_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Netflix" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/baseline_edit"
        app:layout_constraintEnd_toStartOf="@id/bottom_sheet_principal_delete"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/baseline_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/close"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_title" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/coinmoeda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon_coin"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon_coin"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon_coin"
        tools:text="R$ 0,05" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/calendaricon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_coin" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_principal_icon_category"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/icon_category"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_calendar"
        tools:src="@drawable/outros" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon_nao_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/alertnaopago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_category" />

    <ImageView
        android:id="@+id/bottom_sheet_principal_icon_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/checkpago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_category" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_paidout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon_nao_pago"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon_nao_pago"
        tools:text="@string/paidoutinfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon_category"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon_category"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon_category"
        tools:text="Entretenimento" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_maturity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_principal_icon_calendar"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_icon_calendar"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_principal_icon_calendar"
        tools:text="15/04/2023" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheett_btn_pago"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_save"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/paidoutmarcar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheett_btn_nao_pago"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_save"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/paidoutmarcardesmarcar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_delete_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/deleteinfo"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet_principal_btn_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheet_principal_btn_delete"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_delete"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/confirmar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_sheet_principal_delete_info_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginBottom="6dp"
        android:text="@string/expense_delete_infor_title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet_principal_delete_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheet_principal_delete_one"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_delete"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/expense_delete_info_it"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheet_principal_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_delete"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:visibility="gone"
        android:text="@string/expense_delete_info_all"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_principal_delete_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_principal_icon_nao_pago" />


</androidx.constraintlayout.widget.ConstraintLayout>