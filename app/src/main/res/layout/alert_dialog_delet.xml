<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/alert" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alert_delet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="@string/expense_delete_infor_title"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animation_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alert_delet_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/expense_delete_infor_description"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/alert_delet_title"
        app:layout_constraintTop_toBottomOf="@id/alert_delet_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/alert_delet_button_it"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_delete"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/expense_delete_info_it"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toStartOf="@id/alert_delet_button_all"
        app:layout_constraintTop_toBottomOf="@id/alert_delet_description"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/alert_delet_button_all"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_delete"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/alert_delet_button_it"
        android:text="@string/expense_delete_info_all"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toBottomOf="@id/alert_delet_description" />

</androidx.constraintlayout.widget.ConstraintLayout>