<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_category_bottom_sheet_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        tools:src="@drawable/entretenimento"
        android:background="@drawable/icon_category"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_category_bottom_sheet_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_category_bottom_sheet_icon"
        app:layout_constraintTop_toTopOf="@id/item_category_bottom_sheet_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_category_bottom_sheet_icon"
        tools:text="Entretenimento"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        />

    <View
        android:id="@+id/item_category_bottom_sheet_diviser"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cinza_fraco"
        app:layout_constraintTop_toBottomOf="@id/item_category_bottom_sheet_icon"
        android:layout_marginTop="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>