<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/expenseFragment">

    <fragment
        android:id="@+id/expenseFragment"
        android:name="com.isaquesoft.despesas.presentation.ui.fragment.ExpenseFragment"
        android:label="ExpenseFragment"
        tools:layout="@layout/expense_fragment">
        <action
            android:id="@+id/action_expenseFragment_to_newExpenseFragment"
            app:destination="@id/newExpenseFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_expenseFragment_to_expenseDetailsFragment"
            app:destination="@id/expenseDetailsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>

    </fragment>
    <fragment
        android:id="@+id/newExpenseFragment"
        android:name="com.isaquesoft.despesas.presentation.ui.fragment.NewExpenseFragment"
        android:label="NewExpenseFragment"
        tools:layout="@layout/new_expense_fragment">
        <action
            android:id="@+id/action_newExpenseFragment_to_expenseFragment"
            app:destination="@id/expenseFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/expenseFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/expenseDetailsFragment"
        android:name="com.isaquesoft.despesas.presentation.ui.fragment.ExpenseDetailsFragment"
        android:label="ExpenseDetailsFragment"
        tools:layout="@layout/expense_details_fragment">
        <action
            android:id="@+id/action_expenseDetailsFragment_to_expenseFragment"
            app:destination="@id/expenseFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/expenseFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="expense"
            app:argType="com.isaquesoft.despesas.data.model.Expense" />
    </fragment>
</navigation>